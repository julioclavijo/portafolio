        .row.d-flex.align-items-end.fondo-amarillo
            img.img-ajuste-h(src="assets/images/svg-top-cafe.svg", alt="")
    .modal.fade#compra(role="dialog" tabindex="-1" aria-hidden="true"): .modal-dialog.modal-lg(role="document"): .modal-content
        .modal-header
            h3.modal-title.titulo-subrayado Resumen de pedido
            button.close(type="button" data-dismiss="modal" aria-label="Close")
                span(aria-hidden="true") &times;
        .modal-body
            h4.modal-title Solo diligencia los datos para acompañar la compra
            form(method="POST" action="#")
                input(type="hidden" name="subject" value="asunto")
                .form-group
                    label(for="nombre") Nombre y apellido
                    input.form-control#nombre(type="text" name="nombre" required="required")
                .form-group
                    label(for="email") Correo electrónico
                    input.form-control#email(type="email" name="email" required="required")
                .form-group
                    label(for="phone") Teléfono o celular
                    input.form-control#phone(type="email" name="phone" required="required")
                .form-group
                    label(for="producto") Has seleccionado el siguiente producto
                    input.form-control#producto(type_="text" name="producto" disabled)
                .form-group
                    label(for="cost") Precio
                    input.form-control#cost(type_="text" name="cost" disabled)
                .form-group
                    input.btn.btn-outline-primary(type="submit" value="Comprar")
    include assets/include/footer.pug
