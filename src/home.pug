        //- titulo de la pagina
    body
        include assets/include/nav.pug
        //- contenido
        .container-fluid
            .row.justify-content-center.fondo-amarillo
                .titular.text-center
                    h1.titulo Sancocho
                    h2.subtitulo Pal´ guayabo
            .row.justify-content-center.fondo-amarillo
                img.img-fluid(src="assets/images/sanocho.png", alt="")
            .row.d-flex.align-items-end.fondo-amarillo
                img.img-ajuste-h(src="assets/images/svg-top-blanco.svg", alt="")
            .row.justify-content-center#perfil.fondo-blanco
                .col-md-6.col-sm-6.espacio-comodo
                    .titular
                        h1.titulo.text-center ingredientes
                        h2.subtitulo.text-center de preparación.
                        // incluir manifiesto
                    .titular2.espacio-comodo
                        h2.titulo.text-center julio clavijo
                        h3.subtitulo.text-center portafolio diseño gráfico
                    .perfil
                        .row.justify-content-center
                            img.rounded-circle.img-contacto(src="assets/images/Julio-Clavijo-Foto.png")
